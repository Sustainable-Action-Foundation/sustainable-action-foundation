<style>
	section h1 {
		font-size: 3rem;
	}

	.cta-neutral {
		background-color: black;
		border-radius: 1px;
		padding: .5rem;
		padding-inline: 1rem;
		line-height: 1;
		display: block;
		width: fit-content;
		color: white;
		text-decoration: none;
		font-weight: 500;
		transition: box-shadow .2s ease,
					background-color .2s ease;
	}

	.cta-neutral:hover {
		background-color: #191919;
		box-shadow: 2px 2px black;
	}

</style>