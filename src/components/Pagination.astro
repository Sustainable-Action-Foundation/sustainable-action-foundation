---
    const length: number = 10
    const current_index: number = 9
    const initial_route: Route = { text: 'nyheter', href: '/nyheter' } 
---

<nav class="flex gap-50 align-items-center">
    <img src="/icons/arrow-narrow-left.svg" alt="" class="margin-right-100" />

    {current_index == 1 ?  
        <a href={`${initial_route.href}/1`} class="font-weight-500">1</a>
    : <a href={`${initial_route.href}/1`}>1</a> }

    {current_index == 2 ?  
        <a href={`${initial_route.href}/2`} class="font-weight-500">2</a>
        <a href={`${initial_route.href}/2`}>3</a>
    : 
        <>
            {current_index - 1 != 0 ?  
                <a href={`${initial_route.href}/${current_index - 1}`}>{current_index - 1}</a>
            : null }

            {current_index != 1 ?  
                <a href={`${initial_route.href}/${current_index}`} class="font-weight-500">{current_index}</a>
            : null }
        </>
    }

    {current_index + 1 != length && current_index + 1 != 3 ?  
        <a href={`${initial_route.href}/${current_index + 1}`}>{current_index + 1}</a>
        <span>...</span>
    : null }

    {current_index == length ?  
        <a href={`${initial_route.href}/${length}`} class="font-weight-500">{length}</a>
    : <a href={`${initial_route.href}/${length}`}>{length}</a> }

    <img src="/icons/arrow-narrow-right.svg" alt="" class="margin-left-100" />
</nav>

<style>
    a {
        text-decoration: none;
        color: black;
    }

    a:hover {
        text-decoration: underline;
    }

</style>
